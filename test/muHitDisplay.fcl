# -*- mode:tcl -*-
#------------------------------------------------------------------------------
# read generated file with the digitized hits saved, 
# run electron-only reconstruction and display the results
# no random numbers ! 
#------------------------------------------------------------------------------
# muStops must be commented out for grid production.
BEGIN_PROLOG
#  muStops    : [ @local::mergedMuonStops ]
  pdgCode    : 11
  bgHitFiles : @nil
END_PROLOG

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

#include "Stntuple/fcl/templates.fcl"

process_name : MuHitDisplay

source       : { 
    module_type : RootInput
    fileNames : ["data_03.root"]
    maxEvents : -1
}

#
# can use path names specified in 'physics.' context w/o prefixing
#
# physics.trigger_paths : [ allpatrec_reco_display ]
physics.trigger_paths : [ dem_reco_display ]
physics.end_paths     : [ out ]

services.TFileService.fileName            : "egun_stnmaker.hist"
physics.filters.InitStntuple.histFileName : "egun_stnmaker.stn" 

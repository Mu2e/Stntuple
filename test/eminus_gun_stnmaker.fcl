# -*- mode:tcl -*-
#------------------------------------------------------------------------------
# generate 105 MeV/c electrons and make STNTUPLE
#------------------------------------------------------------------------------
#include "fcl/minimalMessageService.fcl"
#include "fcl/standardProducers.fcl"
#include "fcl/standardServices.fcl"

#include "Stntuple/fcl/prolog.fcl"

BEGIN_PROLOG
  pdgCode    : @local::Particle.eminus
  bgHitFiles : @nil
END_PROLOG

#include "Stntuple/fcl/templates.fcl"

process_name : EMinusGunStnmaker

source       : { module_type : EmptyEvent   }

outputs      : { @table::Stntuple.outputs   }
producers    : { @table::Stntuple.producers }
filters      : { @table::Stntuple.filters   }
paths        : { @table::Stntuple.paths     }

physics : {
    producers: { @table::producers 
	generate                 : { @table::producers.egun }
    }
    
    filters  : { @table::filters 
	InitStntuple : { @table::filters.InitStntuple histFileName : "nts.user.eminus_gun_stnmaker.xxx.000001.stn" }
    }

    @table::paths

    trigger_paths : [ path_gen_digi_reco_stn_tcm ]
    out           : [     ]
    end_paths     : [ out ]
}

services.TFileService.fileName            : "nts.user.eminus_gun_stnmaker.xxx.000001.root"
#------------------------------------------------------------------------------
# uncomment the next 2 lines if you want the DST (.art) file to be written out

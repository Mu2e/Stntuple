#include "Stntuple/test/generate_trkpatrec_stnmaker_template.fcl"

process_name : EgunTrkPatRecStnmaker

# for 105 MeV/c electron : E = 105.00124           MeV
# for 105 MeV/c muon     : E = 148.9584269653785   MeV

physics.producers.generate.physics.pdgId  : 11
physics.producers.generate.physics.elow   : 105.0010
physics.producers.generate.physics.ehi    : 105.0015

services.TFileService.fileName            : "egun_trkpatrec_stnmaker.hist"
physics.filters.InitStntuple.histFileName : "egun_trkpatrec_stnmaker.stn" 

# uncomment the next 2 lines if you want the DST file to be written out
physics.out                               : [ detectorOutput ]
outputs.detectorOutput.fileName           : "egun_trkpatrec_stnmaker.root"

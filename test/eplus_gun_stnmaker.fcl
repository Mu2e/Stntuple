# -*- mode:tcl -*-
#------------------------------------------------------------------------------
# generate 105 MeV/c electrons
# make STNTUPLE in one go, without creating an intermediate file
# for 105 MeV/c electron : E = 105.00124           MeV
# for 105 MeV/c muon     : E = 148.9584269653785   MeV
#------------------------------------------------------------------------------
#include "fcl/minimalMessageService.fcl"
#include "fcl/standardProducers.fcl"
#include "fcl/standardServices.fcl"

#include "Stntuple/fcl/prolog.fcl"

BEGIN_PROLOG
  pdgCode    : @local::Particle.eminus
  bgHitFiles : @nil
END_PROLOG

#include "Stntuple/fcl/templates.fcl"

process_name : EPlusGunStnmaker

source       : { module_type : EmptyEvent   }

outputs      : { @table::Stntuple.outputs   }
producers    : { @table::Stntuple.producers }
filters      : { @table::Stntuple.filters   }
paths        : { @table::Stntuple.paths     }

physics : {
    producers: { @table::producers 
	generate                 : { @table::producers.egun 
	    physics : { @table::producers.egun.physics
		pdgId  : -11
	    }
	}
    }
    
    filters  : { @table::filters 
	InitStntuple : { @table::filters.InitStntuple histFileName : "nts.user.egun_eplus_stnmaker.xxx.000001.stn" }
    }

    @table::paths

    trigger_paths : [ path_gen_digi_reco_stn_tcm_dep ]
    out           : [     ]
    end_paths     : [ out ]
}

services.TFileService.fileName            : "nts.user.egun_eplus_stnmaker.xxx.000001.root"
#------------------------------------------------------------------------------
# uncomment the next 2 lines if you want the DST file to be written out
#-----------------------------------------------------------------------------
# physics.out                               : [ detectorOutput ]
# outputs.detectorOutput.SelectEvents       : [ path_gen_digi_reco_stn_tcm_dep ]
outputs.detectorOutput.fileName           : "sim.user.egun_eplus_stnmaker.xxx.000001.art"
#------------------------------------------------------------------------------
# uncomment to avoid waisting time on the initialization of detailed neutron 
# cross sections - that shouldn't affect the CE simulation 
#------------------------------------------------------------------------------
physics.producers.g4run.physics.physicsListName : "QGSP_BERT"

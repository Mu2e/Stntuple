# -*- mode:tcl -*-
#------------------------------------------------------------------------------
# generate 105 MeV/c electrons
# make STNTUPLE in one go, without creating an intermediate file
# for 105 MeV/c electron : E = 105.00124           MeV
# for 105 MeV/c muon     : E = 148.9584269653785   MeV
#------------------------------------------------------------------------------
#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

#include "Stntuple/fcl/prolog.fcl"

BEGIN_PROLOG
  pdgCode    : 11
  bgHitFiles : @nil
END_PROLOG

#include "Stntuple/fcl/templates.fcl"

process_name : EgunDigiRecoStnDemDmm

source       : { module_type : EmptyEvent }

physics : {
    producers: { @table::Stntuple.producers 
	generate : { @table::Stntuple.producers.egun }
    }
    filters  : { @table::Stntuple.filters 
	InitStntuple : { @table::Stntuple.filters.InitStntuple
	    histFileName : "egun_stnmaker.stn" 
	}
    }

    @table::Stntuple.paths

    trigger_paths : [ path_gen_digi_reco_stn_dem_dmm ]
    #    out : [detectorOutput]  # detectorOutput is defined in Stntuple/fcl/templates.fcl
    out           : []
    end_paths     : [ out ]

}
#
# can use path names specified in 'physics.' context w/o prefixing
#
services.TFileService.fileName            : "egun_digi_reco_stn_dem_dmm.hist"
# physics.filters.InitStntuple.histFileName : "egun_stnmaker.stn" 
#------------------------------------------------------------------------------
# uncomment the next 2 lines if you want the DST file to be written out
#-----------------------------------------------------------------------------
# physics.out                               : [ detectorOutput ]
# outputs.detectorOutput.SelectEvents       : { SelectEvents : [ path_gen_digi_reco_stn_dem_dmm ] }
outputs.detectorOutput.fileName           : "egun_digi_reco_stn_dem_dmm.root"
